{
  "CN": "{{etcd_csr_cn}}",
  "hosts": [
    {% for item in etcd_cert_hosts %}
    {% if not loop.last %}
    "{{ item }}",
    {% else %}
    "{{ item }}"
    {% endif %}
    {% endfor %}
  ],
  "key": {
    "algo": "{{etcd_csr_key_algo}}",
    "size": {{etcd_csr_key_size}}
  },
  "names": [
    {
      "C": "{{etcd_csr_names_c}}",
      "L": "{{etcd_csr_names_l}}",
      "O": "{{etcd_csr_names_o}}",
      "OU": "{{etcd_csr_names_ou}}",
      "ST": "{{etcd_csr_names_st}}"
    }
  ]
}
